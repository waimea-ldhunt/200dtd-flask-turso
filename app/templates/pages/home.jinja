{% extends 'pages/base.jinja' %}

{% block title %}

    Flask and Turso DB Demo

{% endblock %}


{% block content %}

    <h1>Flask and Turso Demo</h1>

    <section id="things">
        
        <h3>Shop Items:</h3>
        {% for thing in things %}

            <p><a href="/thing/{{thing.id}}">{{thing.item}} | ${{thing.price}}</a></p>

        {% endfor %}

    </section>


{% endblock %}